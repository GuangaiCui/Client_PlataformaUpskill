@model IEnumerable<PlataformaUpskill_API.Data.Models.Turma>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Turma" asp-action="Create">Create New Turma</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicioCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFimCurso)
            </th>



            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicioCurso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFimCurso)
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Turma" asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-primary mx-2">  Details</a>
                        <a asp-controller="Turma" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-primary mx-2">  Edit</a>

                        <form asp-action="Delete" asp-route-id="@item.Id">
                            <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
