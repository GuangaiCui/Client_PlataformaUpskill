            <label asp-for="Curso"></label>
            <input asp-for="CursoId" class="form-control" />
            <span asp-validation-for="CursoId" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
    <a asp-controller="Turma" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
    </div>
</form>
@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}
}
