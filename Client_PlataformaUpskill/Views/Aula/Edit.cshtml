            <span asp-validation-for="HorarioAssincronoInicio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HorarioAssincronoFim"></label>
            <input type="time" asp-for="HorarioAssincronoFim" class="form-control" />
            <span asp-validation-for="HorarioAssincronoFim" class="text-danger"></span>
