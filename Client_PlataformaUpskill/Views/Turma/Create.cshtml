@model Client_PlataformaUpskill.Models.View_Models.Turma_Curso
<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Turma</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="turma.Nome"></label>
            <input asp-for="turma.Nome" class="form-control" />
            <span asp-validation-for="turma.Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="turma.DataInicioCurso"></label>
            <input asp-for="turma.DataInicioCurso" type="date" class="form-control" />
            <span asp-validation-for="turma.DataInicioCurso" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="turma.DataFimCurso"></label>
            <input asp-for="turma.DataFimCurso" type="date" class="form-control" />
            <span asp-validation-for="turma.DataFimCurso" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="turma.HorarioAssincronoInicio"></label>
            <input asp-for="turma.HorarioAssincronoInicio" type="time" class="form-control" />
            <span asp-validation-for="turma.HorarioAssincronoInicio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="turma.HorarioAssincronoFim"></label>
            <input asp-for="turma.HorarioAssincronoFim" type="time" class="form-control" />
            <span asp-validation-for="turma.HorarioAssincronoFim" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="turma.HorarioSincronoInicio"></label>
            <input asp-for="turma.HorarioSincronoInicio" type="time" class="form-control" />
            <span asp-validation-for="turma.HorarioSincronoInicio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="turma.HorarioSincronoFim"></label>
            <input asp-for="turma.HorarioSincronoFim" type="time" class="form-control" />
            <span asp-validation-for="turma.HorarioSincronoFim" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="turma.TempoLectivo"></label>
            <input asp-for="turma.TempoLectivo" class="form-control" />
            <span asp-validation-for="turma.TempoLectivo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="turma.CursoId" class="control-label"></label>
            <select asp-for="turma.CursoId">
                @foreach (var item in Model.cursos)
                {
                    <option asp-for="turma.CursoId" value="@item.Id"> @item.Id-@item.Nome</option>
                }
            </select>
            <span asp-validation-for="turma.CursoId" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="Turma" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
    </div>
</form>
@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}
}